@using Beadwork.Web.Controllers
@using Beadwork.Web.App

@model IReadOnlyCollection<PictureModel>

@{
    ViewData["Title"] = "Результати пошуку";
}

<h1>Результати пошуку</h1>
@if (Model.Count == 0)
{
    <p>Нічого не знайдено</p>
}
else
{
    <ul>
        @foreach (var picture in Model)
        {
            <li><a href="@Url.Action("Index", "Picture", new { id = picture.Id })">@picture.Title</a></li>
        }
    </ul>
}